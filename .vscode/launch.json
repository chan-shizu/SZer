  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go"
    },
    {
      "name": "Attach to Docker Delve",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "localhost",
      "substitutePath": [
        {
          "from": "/app",
          "to": "${workspaceFolder}/backend"
        }
      ]
    }
  ]
}
